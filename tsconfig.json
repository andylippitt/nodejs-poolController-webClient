{
    "compilerOptions": {
        "baseUrl": ".",
       // "paths": { "*": [ "@types/*" ] },
        "target":"es6",
        "module":"commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "esModuleInterop": true,
        "jsx": "react",
        // "watch": false
    },
    "include": [
        "src"
    ],
    "exclude":[
        "node_modules"
    ]
}